
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check for authentication and ownership.
    function isAuthenticated() {
      return request.auth != null;
    }

    function isClientOwner(clientId) {
      return isAuthenticated() && request.auth.uid == clientId;
    }

    // Inquiries can be created by anyone (e.g., public contact form).
    // They cannot be read, updated, or deleted by clients.
    match /inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if false; // Should only be readable by an admin role.
    }

    // Subscribers can be created by anyone.
    match /subscribers/{email} {
      allow create: if true;
      allow read, update, delete: if false; // Should only be readable by an admin role.
    }

    // A client can only read or update their own document.
    // They cannot create a client document for another user or delete their own.
    match /clients/{clientId} {
      allow read, update: if isClientOwner(clientId);
      allow create, delete: if false;
    }

    // A user can only list projects where their UID matches the clientId field.
    match /projects/{projectId} {
      allow list: if isAuthenticated() && request.query.get("clientId") == request.auth.uid;
      allow read: if isAuthenticated() && resource.data.clientId == request.auth.uid;
      // For create, check the incoming document's data.
      allow create: if isAuthenticated() && request.resource.data.clientId == request.auth.uid;
      // For update/delete, check the existing document's data.
      allow update, delete: if isAuthenticated() && resource.data.clientId == request.auth.uid;
    }

    // Project subcollections can be read or written to only by the owner of the parent project.
    // This is a secure way to manage related data like messages, files, invoices, etc.
    match /projects/{projectId}/{subcollection}/{docId} {
       allow read, write: if isAuthenticated() && get(/databases/$(database)/documents/projects/$(projectId)).data.clientId == request.auth.uid;
    }
    
    // Team members can only be read by admins (future implementation).
    match /team_members/{teamMemberId} {
        allow read, write: if false; // Locked for clients
    }
  }
}
