
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    // Checks if the user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Checks if the user is the owner of the document.
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Checks if the user is the admin.
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'divyahanssuperpower@gmail.com';
    }
    
    // Checks if the user is the client associated with a project.
    function isProjectClient(projectId) {
      let projectData = get(/databases/$(database)/documents/projects/$(projectId)).data;
      return isOwner(projectData.clientId);
    }
    
    // --- COLLECTION RULES ---

    // Inquiries: Anyone can create, only admin can read.
    match /inquiries/{inquiryId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Subscribers: Anyone can create, only admin can read.
    match /subscribers/{email} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Clients: Admin can read all. A user can read/write their own document.
    match /clients/{clientId} {
      allow get, update: if isOwner(clientId);
      allow list, create, delete: if isAdmin();
      allow get: if isAdmin(); // Admin can get any client doc
    }

    // Projects: Admin can do anything. Clients can only access their own projects.
    match /projects/{projectId} {
      allow read, write: if isAdmin() || isProjectClient(projectId);
      allow list: if isAdmin() || (isAuthenticated() && request.query.get("clientId") == request.auth.uid);
    }

    // Project Subcollections: Admin or the project's client can access.
    match /projects/{projectId}/{subcollection}/{docId} {
       allow read, write: if isAdmin() || isProjectClient(projectId);
    }
  }
}
